<%= form_for(@user) do |f| %>
  <%= render "shared/error_messages" %>

  <%= f.label :name, t(".form_name") %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :email, t(".form_email") %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label :password, t(".form_password") %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label :password_confirmation, t(".form_password_confirmation") %>
  <%= f.password_field :password_confirmation, class: "form-control" %>

  <%= f.submit t(".form_submit"), class: "btn btn-primary" %>
<% end %>
