<% provide :title, t("title_login") %>
<h1><%= t("title_login") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

    <%= f.label :email, t("form_email") %>
    <%= f.email_field :email, class: "form-control" %>

    <%= f.label :password, t("form_password") %>
    <%= f.password_field :password, class: "form-control" %>

    <%= f.submit t("title_login"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t("form_newuser") %> <%= link_to t("sign_up"), signup_path %></p>
  </div>
</div>
